<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8sp"
    app:cardBackgroundColor="#242424"
    style="@style/Widget.Material3.CardView.Filled">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="60sp"
            android:layout_height="4sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            app:cardBackgroundColor="#474545"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_marginBottom="5sp">

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:id="@+id/btEditTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="20sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/ivEditTitle"
                android:padding="12sp"
                android:src="@drawable/baseline_edit_24">

            </ImageView>

            <TextView
                android:id="@+id/tvEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivEditTitle"
                android:text="@string/edit_title"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:textSize="16sp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btEditThumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="20sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/ivEditThumbnail"
                android:padding="12sp"
                android:src="@drawable/baseline_add_photo_alternate_24">

            </ImageView>

            <TextView
                android:id="@+id/tvEditThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivEditThumbnail"
                android:text="@string/edit_thumbnail"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:textSize="16sp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btAddToQueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="20sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/ivAddToQueue"
                android:padding="12sp"
                android:src="@drawable/baseline_queue_music_24"
                app:tint="@android:color/white">

            </ImageView>

            <TextView
                android:id="@+id/tvAddToQueue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivAddToQueue"
                android:text="@string/add_to_queue"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:textSize="16sp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="20sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/ivSync"
                android:padding="12sp"
                android:src="@drawable/baseline_sync_24">

            </ImageView>

            <TextView
                android:id="@+id/tvSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivSync"
                android:text="@string/sync"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:textSize="16sp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="20sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/ivUpdate"
                android:padding="12sp"
                android:src="@drawable/baseline_update_24">

            </ImageView>

            <TextView
                android:id="@+id/tvUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivUpdate"
                android:text="@string/update_playlist"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:textSize="16sp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="20sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/ivDelete"
                android:padding="12sp"
                android:src="@drawable/baseline_delete_24">

            </ImageView>

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivDelete"
                android:text="@string/delete_playlist"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:textSize="16sp">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>